@model WebAPI.Model.Produto

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<h2>Detalhes do Produto</h2>

<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Model.Nome
        </dd>
        <dt class="col-sm-2">
            Preço
        </dt>
        <dd class="col-sm-10">
            @Model.Preco
        </dd>
        <dt class="col-sm-2">
            Quantidade em Estoque
        </dt>
        <dd class="col-sm-10">
            @Model.QntEstoque
        </dd>
        <dt class="col-sm-2">
            Id Categoria
        </dt>
        <dd class="col-sm-10">
            @Model.FK_CategoriaId
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</div>
