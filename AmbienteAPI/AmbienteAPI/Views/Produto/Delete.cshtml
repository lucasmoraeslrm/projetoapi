@model WebAPI.Model.Produto

@{
    ViewData["Title"] = "Excluir Produto";
}

<h2>Excluir Produto</h2>

<h4>Você tem certeza que deseja excluir este produto?</h4>
<hr />
<div>
    <h4>Produto</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Model.Nome
        </dd>
        <dt class="col-sm-2">
            Preço
        </dt>
        <dd class="col-sm-10">
            @Model.Preco
        </dd>
        <dt class="col-sm-2">
            Quantidade em Estoque
        </dt>
        <dd class="col-sm-10">
            @Model.QntEstoque
        </dd>
        <dt class="col-sm-2">
            Categoria
        </dt>
        <dd class="col-sm-10">
            @Model.Categorias?.Nome
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>
